<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/main_info_bg"
    android:orientation="vertical"
    android:padding="4dip">

    <EditText
        android:id="@+id/jz_add_beizhu_et"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:gravity="top"
        android:hint=""
        android:isScrollContainer="true"
        android:singleLine="false" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/jz_add_beizhu_queding"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="12.88"
            android:text="@string/jz_tab2_queding" />

        <Button
            android:id="@+id/jz_add_beizhu_quxiao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="150dp"
            android:layout_marginRight="10dp"
            android:layout_weight="12.88"
            android:text="@string/jz_add_quxiao" />
    </LinearLayout>

</LinearLayout>